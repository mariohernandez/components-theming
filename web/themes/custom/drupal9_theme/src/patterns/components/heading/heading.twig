{{ attach_library('drupal9_theme/heading') }}

{# Defaults to h2 (heading level 2) if no heading level is supplied. #}
<h{{ heading.heading_level|default('h2') }}
  class="heading{{ heading.modifier ? ' ' ~ heading.modifier }}
  {{- attributes ? ' ' ~ attributes.class -}}"
  {{- attributes ? attributes|without(class) -}}>

  {% if heading.url %}
    <a href="{{ heading.url }}" class="heading__link">{{ heading.title }}</a>
  {% else %}
    {{ heading.title }}
  {% endif %}

</h{{ heading.heading_level|default('h2') }}>
